<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2column-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="custom-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Search Movie</argument>
                    <argument name="path" xsi:type="string">movie/ko</argument>
                    <argument name="sortOrder" xsi:type="number">300</argument>
                </arguments>
            </block>
            <block class="Magento\Framework\View\Element\Html\Link\Current" name="edit-customer-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Edit Customer Information</argument>
                    <argument name="path" xsi:type="string">movie/jquery</argument>
                    <argument name="sortOrder" xsi:type="number">400</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>